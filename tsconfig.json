{
  "extends": "@open-web3/dev-config/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "target": "es2019",
    "module": "ESNext",
    "declaration": true,
    "baseUrl": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@zeitgeistpm/indexer": [
        "packages/indexer/src"
      ],
      "@zeitgeistpm/types": [
        "packages/types/src"
      ],
      "@zeitgeistpm/type-defs": [
        "packages/type-defs/src"
      ],
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}